{
    "name": "studyfield/demo-auction",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
      "process-timeout": 0,
      "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^0.6.0",
        "slim/slim": "^4.3",
        "symfony/console": "^5.3"
    },
    "require-dev": {
        "overtrue/phplint": "^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    }
}
